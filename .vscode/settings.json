{
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "files.associations": {
        ".gitignore": "ignore",
        "LICENSE": "plaintext",
        "Makefile": "makefile",
        "All*": "makefile",
        "*.json": "jsonc",
        "*.lark": "lark",
        "*.lock": "toml",
        "*.md": "markdown",
        "*.py": "python",
        "*.rs": "rust",
        "*.txt": "plaintext",
        "*.toml": "toml",
        "*.yaml": "yaml",
        "*.yml": "yaml",
        "*": "OpenFOAM",
        // third party
        "files": "makefile",
        "options": "makefile",
        "*.C": "cpp",
        "*.H": "cpp",
        "*.csv": "csv",
        ".pvsm": "xml",
        "*.sh": "shellscript",
    },
    "[yaml]": {
        "editor.tabSize": 4
    }
}
